!!!
%html
	%head
		%title Chittr
		%link{:rel => "stylesheet", :href => "/css/bootstrap.css"}
		%link{:rel => "stylesheet", :href => "/css/bootstrap-theme.css"}
		%link{:href => 'http://fonts.googleapis.com/css?family=Roboto:400italic,700italic,300,700,300italic,400', :rel => 'stylesheet', :type => 'text/css'}
		%script{:src => "/js/bootstrap.min.js"}
	%body
		.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
			.container
				.navbar-header
					%button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.navbar-brand{:href => "/"} Chittr
				.navbar-collapse.collapse
					%ul.nav.navbar-nav.navbar-right
						- unless @user
							%li
								%a{:href => "/login"} Sign in
							%li
								%a{:href => "/users/new"} Sign up
						- if @user
							%li
								%a{:href => "/new"} Post cheet
							%li
								%a{:href => "/logout"} Sign out
							%p{:class => "navbar-text navbar-right"} Signed in as #{@user.username}
						/ %li
						/ 	%a{:href => "#about"} About
						/ %li
						/ 	%a{:href => "../navbar/"} Default
						/ %li
						/ 	%a{:href => "../navbar-static-top/"} Static top
						/ %li.active
				/ 			%a{:href => "./"} Fixed top
		%br/
		%br/
		%br/
		.container
			=flash[:error]
			=flash[:notice]
			=yield